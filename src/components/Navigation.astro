---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path;
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <a href="/" class="font-serif text-2xl text-navy tracking-tight">
      Pensteady
    </a>
    
    <div class="hidden md:flex items-center gap-8">
      <a href="/" class:list={["text-sm font-medium transition-colors", isActive("/") ? "text-amber" : "text-gray-500 hover:text-navy"]}>Home</a>
      <a href="/pricing" class:list={["text-sm font-medium transition-colors", isActive("/pricing") ? "text-amber" : "text-gray-500 hover:text-navy"]}>Pricing</a>
      <a href="/about" class:list={["text-sm font-medium transition-colors", isActive("/about") ? "text-amber" : "text-gray-500 hover:text-navy"]}>About</a>
      <a href="/blog" class:list={["text-sm font-medium transition-colors", isActive("/blog") ? "text-amber" : "text-gray-500 hover:text-navy"]}>Blog</a>
      <a href="/contact" class="text-sm font-semibold px-5 py-2.5 bg-navy text-white rounded-lg hover:bg-navy-light transition-colors">
        Get Started
      </a>
    </div>
  </nav>
</header>
